= form_for @subdivision do |f|
  =error_messages_for(@subdivision)


  .row
    .col-xs-6.col-md-6
      .field
        = f.label :title
        %p
        = f.text_area :title
    .col-xs-6.col-md-6
      .field
        = f.label 'Подотдел'
        %p
        = f.select :subdivision_id, Subdivision.all.map{|sub| [sub.title, sub.id]}, {:include_blank => true, :default => nil}
  %p
  .row
    .col-xs-12.col-md-6
      .actions
        = f.submit 'Сохранить', class: 'btn btn-xs btn-primary'

