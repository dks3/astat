= form_for @code do |f|
  - if @code.errors.any?
    #error_explanation
      %h2= "#{pluralize(@code.errors.count, "error")} prohibited this code from being saved:"
      %ul
        - @code.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :city_code
    = f.number_field :city_code
  .field
    = f.label :country_code
    = f.number_field :country_code
  .actions
    = f.submit 'Save'
